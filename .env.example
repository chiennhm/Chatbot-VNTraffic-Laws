# =============================================================================
# Vietnamese Traffic Law Chatbot - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# Qdrant Cloud (Required)
# =============================================================================
QDRANT_URL=https://your-cluster.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION=VN_traffic_regulation_md_hybrid_v2

# =============================================================================
# Embedding Models
# =============================================================================
DENSE_MODEL_ID=Savoxism/vietnamese-legal-embedding-finetuned
SPARSE_MODEL_ID=Qdrant/bm25
RERANK_MODEL_ID=namdp-ptit/ViRanker

# Hybrid Search Weights
WEIGHT_DENSE=0.8
WEIGHT_SPARSE=0.2
RRF_K=50

# =============================================================================
# LLM Configuration
# =============================================================================

# LLM Provider: "gemini" (default, cloud-based) or "local" (GPU required)
LLM_PROVIDER=gemini

# --- Gemini API (when LLM_PROVIDER=gemini) ---
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# --- Local VLM (when LLM_PROVIDER=local) ---
USE_VLM=true
VLM_MODEL_ID=unsloth/Qwen3-VL-8B-Instruct-unsloth-bnb-4bit
VLM_LORA_PATH=
VLM_LOAD_4BIT=true

# =============================================================================
# Backend Configuration
# =============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Processing Configuration (Optional)
# =============================================================================
MAX_CHUNK_CHARS=1500

# Directory Paths (optional - defaults are relative to project)
# DOC_DIR=/path/to/documents_doc
# CLEAN_DIR=/path/to/documents_clean
# MARKDOWN_DIR=/path/to/documents_markdown
# DATA_DIR=/path/to/structured_law